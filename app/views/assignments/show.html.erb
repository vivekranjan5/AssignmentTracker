<p>
  <b>Title:</b>
  <%= @assignment.title %>
</p>
<p>
 	<b>Created_by: </b>
 	<%= @assignment.creator.name %>
</p>
<p>
	<b>Assignment Creation Date: </b>
	<%= @assignment.start_date.strftime("%d-%m-%Y") %>
</p>
<% if @temp_assignment.exists? %>
	<p>
 		<b>Project Status: </b>
 		<%= @temp_assignment.first.current_status %>
	</p>
<% end %>
<p>
 	<b>Assigned To: </b>
 	<ol>
 	<% @assignment.assigned_users.each do |user| %>
 		<li><%= user.name %></li>
 	<% end %>
 	</ol>
 </p>
<p>
  <b>Content:</b>
  <%= @assignment.content %>
</p>
 
<%if user_signed_in? %>
	<%= link_to 'Edit', edit_assignment_path(@assignment) %> | 
<% end %> 
<%= link_to 'Back', assignments_path %>
