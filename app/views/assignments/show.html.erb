<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @assignment.title %>
</p>
<p>
 	<b>Created_by: </b>
 	<%= @assignment.creator.name %>
</p>
<p>
 	<b>Assigned To: </b>
 	<ol>
 	<% @assignment.users.each do |user| %>
 		<li><%= user.name %></li>
 	<% end %>
 	</ol>
 </p>
<p>
  <b>Content:</b>
  <%= @assignment.content %>
</p>
 
<%if user_signed_in? && current_user==@assignment.creator %>
<%= link_to 'Edit', edit_assignment_path(@assignment) %> | 
<% end %> 
<%= link_to 'Back', assignments_path %>
